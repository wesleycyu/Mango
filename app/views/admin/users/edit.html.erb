<h1>Admin Edit</h1>
<p>You are editing <%= @user.full_name %>'s account info </p>

<%= form_for [:admin, @user], method: :put do |f| %>

  <% if @user.errors.any? %>
    <div class="errors">
      <%= pluralize(@user.errors.count, "error") %> prevented you from creating you account.
      <ul>
        <%= @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label "Email Address" %>
    <%= f.text_field "email" %>
  </div>

  <div>
    <%= f.label "First Name" %>
    <%= f.text_field "firstname" %>
  </div>

  <div>
    <%= f.label "Last Name" %>
    <%= f.text_field "lastname" %>
  </div>

  <div>
    <%= f.submit "Update your account!" %>
  </div>

<% end %>
